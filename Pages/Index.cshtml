@page
@model RadioAmateurHelper.Pages.IndexModel
@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@{
    ViewData["Title"] = "Главная";
}

<style>
    body {
        font-family: sans-serif;
    }

    .top-bar {
        display: flex;
        justify-content: flex-end;
        padding: 10px 20px;
        margin-bottom: 20px;
    }

    .top-bar-buttons {
        display: flex;
        gap: 10px;
        background: rgba(255, 255, 255, 0.6);
        backdrop-filter: blur(6px);
        -webkit-backdrop-filter: blur(6px);
        padding: 6px 14px;
        border-radius: 12px;
        align-items: center;
    }

        .top-bar-buttons a {
            text-decoration: none;
            color: #0066cc;
            font-weight: 500;
            padding: 6px 10px;
            border-radius: 8px;
            transition: background-color 0.3s, color 0.3s;
        }

            .top-bar-buttons a:hover {
                background-color: #e0e0e0;
                color: #004499;
            }



    .main-title {
        text-align: center;
        font-size: 1.8rem;
        margin: 20px 0 10px 0;
    }

    .description {
        text-align: center;
        font-size: 0.95rem;
        max-width: 800px;
        margin: 0 auto 20px auto;
        padding: 0 1rem;
    }

    .nav-links {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 1rem;
        font-size: 0.95rem;
        margin-bottom: 25px;
    }

    .nav-links a {
        text-decoration: none;
        color: #0066cc;
        padding: 6px 12px;
        border-radius: 5px;
        transition: background-color 0.2s;
    }

    .nav-links a:hover {
        background-color: #f0f0f0;
    }

    .preview-image {
        display: block;
        max-width: 90%;
        height: auto;
        margin: 0 auto 25px auto;
        border-radius: 10px;
        box-shadow: 0 1px 6px rgba(0,0,0,0.1);
    }

    .image-row {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        gap: 20px;
        flex-wrap: wrap; /* адаптация на мобильных */
        margin: 20px 0;
    }

    .image-row img.preview-image {
        max-width: 80%;
        max-height: 500px;
        width: auto;
        height: auto;
        object-fit: contain;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .image-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 20px;
        max-width: 1800px;
        margin: 30px auto;
        padding: 0 20px;
    }

        .image-grid a {
            text-decoration: none;
        }

    .preview-image {
        width: 100%;
        height: auto;
        object-fit: cover;
        border-radius: 10px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.15);
        transition: transform 0.2s ease-in-out;
    }

        .preview-image:hover {
            transform: scale(1.02);
        }

    .nav-links {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 1.5rem;
        font-size: 0.95rem;
        margin-bottom: 25px;
        position: relative;
    }

    .nav-links a {
        text-decoration: none;
        color: #0066cc;
        padding: 6px 12px;
        border-radius: 5px;
        transition: background-color 0.2s;
    }

    .nav-links a:hover,
    .dropdown:hover .dropbtn {
        background-color: #f0f0f0;

    }

    .dropdown {
        position: relative;
        display: inline-block;

    }

    .dropdown-menu {
        background-color: rgba(255, 255, 255, 0.95) !important; /* почти белый фон */
        backdrop-filter: none !important; /* отключить размытие внутри меню */
        -webkit-backdrop-filter: none !important;
        box-shadow: 0px 4px 8px rgba(0,0,0,0.1); /* лёгкая тень для отделения */
        border-radius: 8px; /* скругление углов */
    }

    .dropbtn {
        cursor: pointer;
        display: inline-block;
        color: #0066cc;
        padding: 6px 12px;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        top: 100%; /* сразу под кнопкой */
        left: 0;
        background-color: #ffffff;
        min-width: 200px;
        box-shadow: 0px 8px 16px rgba(0,0,0,0.2);
        z-index: 999;
        border-radius: 8px;
        backdrop-filter: none !important;
        -webkit-backdrop-filter: none !important;
    }

        .dropdown-content a {
            color: black;
            padding: 10px 12px;
            text-decoration: none;
            display: block;
            text-align: left;
        }

            .dropdown-content a:hover {
                background-color: #f5f5f5;
            }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    .header-overlay {
    position: relative;
    overflow: visible;
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
    padding: 30px 40px; /* внутренние отступы */
    margin: 20px auto; /* центрируем */
    max-width: 1200px; /* чтобы ровно с карточками */
    border-radius: 20px;
    text-align: center;
    z-index: 1;
}

/* Плавное размытие */
.header-overlay::before {
    content: '';
    position: absolute;
    top: 0; left: 0; right: 0; bottom: 0;
    background: radial-gradient(ellipse at center, rgba(255,255,255,0) 40%, rgba(255,255,255,1) 100%);
    pointer-events: none;
    border-radius: 20px;
    z-index: -1;
}

/* Заголовок */
.header-overlay h1 {
    font-size: 2rem;
    margin-bottom: 10px;
    font-weight: bold;
}

/* Описание */
.header-overlay .description {
    font-size: 1rem;
    color: #333;
    margin-bottom: 20px;
}

/* Навигация */
.header-overlay .nav-links {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 10px;
}

.header-overlay .nav-links a {
    color: #0066cc;
    text-decoration: none;
    padding: 8px 12px;
    background: rgba(255,255,255,0.8);
    border-radius: 8px;
    transition: background 0.3s;
    font-weight: 500;
}

.header-overlay .nav-links a:hover {
    background: rgba(240,240,240,1);
}

/* Выпадающий список */
.dropdown-content {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    background-color: #ffffff;
    min-width: 200px;
    box-shadow: 0px 8px 16px rgba(0,0,0,0.2);
    z-index: 999;
    border-radius: 8px;
}

.dropdown-content a {
    color: black;
    padding: 10px 12px;
    text-decoration: none;
    display: block;
    text-align: left;
}

.dropdown-content a:hover {
    background-color: #f5f5f5;
}

.dropdown:hover .dropdown-content {
    display: block;
}

/* Адаптивность для маленьких экранов */
@@media (max-width: 768px) {
    .header-overlay {
        padding: 20px;
        margin: 10px auto;
        max-width: 90%;
    }

    .header-overlay h1 {
        font-size: 1.5rem;
    }

    .header-overlay .description {
        font-size: 0.9rem;
    }

    .header-overlay .nav-links {
        flex-direction: column;
        align-items: center;
    }

    .dropdown-content {
        min-width: 160px;
    }
}




    .header-content {
        position: relative;
        z-index: 1;
        backdrop-filter: none;
        -webkit-backdrop-filter: none;
    }


    @@media (max-width: 600px) {
        .main-title {
            font-size: 1.4rem;
        }

        .top-bar {
            flex-direction: column;
            align-items: flex-start;
            gap: 0.4rem;
        }

        .nav-links {
            flex-direction: column;
            align-items: center;
        }

        .image-row img.preview-image {
            max-width: 90%;
        }

    }
</style>

