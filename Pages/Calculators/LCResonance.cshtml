@page
@model RadioAmateurHelper.Pages.Calculators.LCResonanceModel
@{
    ViewData["Title"] = "LC-резонанс";
}

<h2>Калькулятор LC-резонанса</h2>
<form method="post">
    <label>Индуктивность (L, мкГн):</label>
    <input asp-for="L" class="form-control" />

    <label>Ёмкость (C, нФ):</label>
    <input asp-for="C" class="form-control" />

    <button type="submit" class="btn btn-primary mt-2">Рассчитать</button>
</form>
@if (Model.Frequency != null)
{
    <p class="mt-3">Резонансная частота: <strong>@Model.Frequency МГц</strong></p>
}