@page
@model RadioAmateurHelper.Pages.Calculators.IndexModel
@{
    ViewData["Title"] = "Калькуляторы";
}
<style>
    .header-overlay {
        background: rgba(255, 255, 255, 0.6);
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
        padding: 50px 20px;
        border-radius: 12px;
        /* Плавная равномерная прозрачность со всех сторон */
        mask-image: linear-gradient(to top, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 10%, rgba(0,0,0,1) 90%, rgba(0,0,0,0) 100%), linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 3%, rgba(0,0,0,1) 97%, rgba(0,0,0,0) 100%);
        -webkit-mask-image: linear-gradient(to top, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 10%, rgba(0,0,0,1) 90%, rgba(0,0,0,0) 100%), linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 3%, rgba(0,0,0,1) 97%, rgba(0,0,0,0) 100%);
        mask-composite: intersect;
        -webkit-mask-composite: destination-in;
    }
</style>
<div class="header-overlay">

<h2>Калькуляторы</h2>
<form method="post">
    <label for="calcSelect">Выберите тип расчета:</label>
    <select asp-for="SelectedCalculator" class="form-select" id="calcSelect">
        <option value="">-- выберите --</option>
        <option value="OhmLaw">Закон Ома</option>

        <option value="LCResonance">LC-резонанс</option>
        <option value="Divider">Делитель напряжения</option>

        <option value="Antennas">Калькулятор антенн</option>
        <!-- другие калькуляторы можно добавить здесь -->
    </select>
    <button type="submit" class="btn btn-primary mt-2">Перейти</button>
</form>

@if (!string.IsNullOrEmpty(Model.RedirectUrl))
{
    <script>
        window.location.href = "@Model.RedirectUrl";
    </script>
}
</div>