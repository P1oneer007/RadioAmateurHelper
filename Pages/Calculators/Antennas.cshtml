@page
@model RadioAmateurHelper.Pages.Calculators.AntennasModel
@{
    ViewData["Title"] = "Калькулятор антенн";
}
<style>
    .header-overlay {
        background: rgba(255, 255, 255, 0.6);
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
        padding: 50px 20px;
        border-radius: 12px;
        /* Плавная равномерная прозрачность со всех сторон */
        mask-image: linear-gradient(to top, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 10%, rgba(0,0,0,1) 90%, rgba(0,0,0,0) 100%), linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 3%, rgba(0,0,0,1) 97%, rgba(0,0,0,0) 100%);
        -webkit-mask-image: linear-gradient(to top, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 10%, rgba(0,0,0,1) 90%, rgba(0,0,0,0) 100%), linear-gradient(to right, rgba(0,0,0,0) 0%, rgba(0,0,0,1) 3%, rgba(0,0,0,1) 97%, rgba(0,0,0,0) 100%);
        mask-composite: intersect;
        -webkit-mask-composite: destination-in;
    }
</style>
<div class="header-overlay">
<h2>Расчёт длины антенны</h2>
<form method="post">
    <label>Частота (МГц):</label>
    <input asp-for="Frequency" class="form-control" />

    <button type="submit" class="btn btn-primary mt-2">Рассчитать</button>
</form>

@if (Model.Wavelength != null)
{
    <div class="mt-3">
        <p>Длина волны: <strong>@Model.Wavelength м</strong></p>
        <p>Полуволновый диполь (λ/2): <strong>@(Model.Wavelength / 2) м</strong></p>
        <p>Четвертьволновая антенна (λ/4): <strong>@(Model.Wavelength / 4) м</strong></p>
    </div>
}
</div>
