@page
@model RadioAmateurHelper.Pages.Blog.CreateModel
@{
    ViewData["Title"] = "Создать запись";
}
<style>
    .header-overlay {
        position: relative;
        overflow: visible;
        background: rgba(255, 255, 255, 0.6);
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
        padding: 30px 40px; /* внутренние отступы */
        margin: 20px auto; /* центрируем */
        max-width: 1200px; /* чтобы ровно с карточками */
        border-radius: 20px;
        text-align: center;
        z-index: 1;
    }

        /* Плавное размытие */
        .header-overlay::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: radial-gradient(ellipse at center, rgba(255,255,255,0) 40%, rgba(255,255,255,1) 100%);
            pointer-events: none;
            border-radius: 20px;
            z-index: -1;
        }

        /* Заголовок */
        .header-overlay h1 {
            font-size: 2rem;
            margin-bottom: 10px;
            font-weight: bold;
        }

        /* Описание */
        .header-overlay .description {
            font-size: 1rem;
            color: #333;
            margin-bottom: 20px;
        }

        /* Навигация */
        .header-overlay .nav-links {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 10px;
        }

            .header-overlay .nav-links a {
                color: #0066cc;
                text-decoration: none;
                padding: 8px 12px;
                background: rgba(255,255,255,0.8);
                border-radius: 8px;
                transition: background 0.3s;
                font-weight: 500;
            }

                .header-overlay .nav-links a:hover {
                    background: rgba(240,240,240,1);
                }

    /* Выпадающий список */
    .dropdown-content {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        background-color: #ffffff;
        min-width: 200px;
        box-shadow: 0px 8px 16px rgba(0,0,0,0.2);
        z-index: 999;
        border-radius: 8px;
    }

        .dropdown-content a {
            color: black;
            padding: 10px 12px;
            text-decoration: none;
            display: block;
            text-align: left;
        }

            .dropdown-content a:hover {
                background-color: #f5f5f5;
            }

    .dropdown:hover .dropdown-content {
        display: block;
    }

    /* Адаптивность для маленьких экранов */
    @@media (max-width: 768px) {
        .header-overlay {
            padding: 20px;
            margin: 10px auto;
            max-width: 90%;
        }

            .header-overlay h1 {
                font-size: 1.5rem;
            }

            .header-overlay .description {
                font-size: 0.9rem;
            }

            .header-overlay .nav-links {
                flex-direction: column;
                align-items: center;
            }

        .dropdown-content {
            min-width: 160px;
        }
    }

</style>
<div class="header-overlay">
    <h1>Новая запись</h1>

    <form method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <input type="text" name="Title" class="form-control" placeholder="Заголовок" required />
        </div>

        <div class="mb-3">
            <textarea name="Content" class="form-control" rows="10" placeholder="Текст записи" required></textarea>
        </div>

        <div class="mb-3">
            <label>Изображение:</label>
            <input type="file" name="Image" class="form-control" accept="image/*" />
        </div>

        <div class="mb-3">
            <label>Видео:</label>
            <input type="file" name="Video" class="form-control" accept="video/*" />
        </div>

        <div class="mb-3">
            <label>Файл:</label>
            <input type="file" name="File" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">Создать</button>
    </form>
</div>