@page
@model RadioAmateurHelper.Pages.Admin.CircuitsModel
@{
    ViewData["Title"] = "Добавить схему";
}

<div class="header-overlay">
    <h1>Добавление схемы</h1>

    <form method="post" enctype="multipart/form-data">
        <input type="text" name="Title" class="form-control mb-3" placeholder="Название схемы" required />
        <input type="text" name="Category" class="form-control mb-3" placeholder="Категория" required />
        <textarea name="Description" class="form-control mb-3" placeholder="Описание" rows="4"></textarea>
        <input type="file" name="Image" class="form-control mb-3" />
        <button type="submit" class="btn btn-primary">Добавить</button>
    </form>
</div>